---
import Layout from "../../layouts/Layout.astro";
import GalleryCarousel from "../../components/GalleryCarousel.astro";
import { properties } from "../../data/properties";

export function getStaticPaths() {
    return properties.map((prop) => ({
        params: { id: prop.id.toString() },
        props: { property: prop },
    }));
}

const { property } = Astro.props;
---

<Layout title={`${property.title} | LuxeEstate`}>
    <div class="container mx-auto px-6 py-12 mt-20">
        <!-- Top Section: Images (Left) vs Info (Right) -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
            <!-- Left Column: Images -->
            <div class="space-y-4">
                <div class="h-[500px] rounded-2xl overflow-hidden shadow-lg">
                    <img
                        id="main-image"
                        src={property.image}
                        alt={property.title}
                        class="w-full h-full object-cover hover:scale-105 transition-all duration-700"
                        style="transition: opacity 0.3s ease-in-out;"
                    />
                </div>
                <GalleryCarousel
                    images={property.images}
                    mainImageId="main-image"
                />
            </div>

            <!-- Right Column: Info & Buy Box -->
            <div class="flex flex-col justify-center">
                <div class="mb-6">
                    <span
                        class="inline-block py-1 px-3 rounded-full bg-blue-100 text-blue-600 text-sm font-semibold mb-4"
                    >
                        {property.tag}
                    </span>
                    <h1
                        class="text-4xl font-bold text-gray-900 mb-2 leading-tight"
                    >
                        {property.title}
                    </h1>
                    <p class="text-xl text-gray-500 flex items-center gap-2">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        {property.location}
                    </p>
                </div>

                <div class="text-5xl font-bold text-gray-900 mb-8">
                    {property.price}
                </div>

                <!-- Key Stats -->
                <div
                    class="grid grid-cols-3 gap-6 mb-8 border-y border-gray-100 py-6"
                >
                    <div class="text-center">
                        <p
                            class="text-gray-400 text-sm uppercase tracking-wider mb-1"
                        >
                            Habitaciones
                        </p>
                        <p class="text-2xl font-bold text-gray-900">
                            {property.beds}
                        </p>
                    </div>
                    <div class="text-center border-l border-gray-100">
                        <p
                            class="text-gray-400 text-sm uppercase tracking-wider mb-1"
                        >
                            Baños
                        </p>
                        <p class="text-2xl font-bold text-gray-900">
                            {property.baths}
                        </p>
                    </div>
                    <div class="text-center border-l border-gray-100">
                        <p
                            class="text-gray-400 text-sm uppercase tracking-wider mb-1"
                        >
                            Área
                        </p>
                        <p class="text-2xl font-bold text-gray-900">
                            {property.area}
                        </p>
                    </div>
                </div>

                <!-- Agent & Actions -->
                <div class="bg-gray-50 rounded-xl p-6 border border-gray-100">
                    <div class="flex items-center gap-4 mb-6">
                        <img
                            src={property.agent.image}
                            alt={property.agent.name}
                            class="w-14 h-14 rounded-full object-cover border-2 border-white shadow-sm"
                        />
                        <div>
                            <p class="font-bold text-gray-900">
                                {property.agent.name}
                            </p>
                            <p class="text-blue-600 text-sm">
                                {property.agent.role}
                            </p>
                        </div>
                    </div>
                    <div class="space-y-3">
                        <button
                            class="w-full py-4 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors shadow-lg shadow-blue-600/20 flex items-center justify-center gap-2"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                ></path>
                            </svg>
                            Contactar Agente
                        </button>
                        <button
                            class="w-full py-4 bg-white border-2 border-gray-200 hover:border-blue-600 text-gray-700 hover:text-blue-600 font-bold rounded-lg transition-all flex items-center justify-center gap-2"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                                ></path>
                            </svg>
                            Agendar Visita
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Section: Details & Features -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <div class="lg:col-span-2 space-y-12">
                <div>
                    <h2
                        class="text-2xl font-bold text-gray-900 mb-6 pb-2 border-b border-gray-100"
                    >
                        Descripción
                    </h2>
                    <p class="text-gray-600 leading-relaxed text-lg">
                        {property.description}
                    </p>
                </div>

                <div>
                    <h2
                        class="text-2xl font-bold text-gray-900 mb-6 pb-2 border-b border-gray-100"
                    >
                        Características
                    </h2>
                    <div
                        class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8"
                    >
                        {
                            property.features.map((feature) => (
                                <div class="flex items-center gap-3 text-gray-700 p-3 bg-gray-50 rounded-lg">
                                    <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 flex-shrink-0">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-4 w-4"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"
                                            />
                                        </svg>
                                    </div>
                                    <span class="font-medium">{feature}</span>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .scrollbar-hide::-webkit-scrollbar {
        display: none;
    }
    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>

<script>
    const mainImage = document.getElementById("main-image") as HTMLImageElement;
    const thumbnails = document.querySelectorAll(".gallery-thumbnail");

    thumbnails.forEach((thumb) => {
        thumb.addEventListener("click", () => {
            const newImageSrc = thumb.getAttribute("data-image");
            if (mainImage && newImageSrc) {
                mainImage.style.opacity = "0";
                setTimeout(() => {
                    mainImage.src = newImageSrc;
                    mainImage.style.opacity = "1";
                }, 200);
            }
        });
    });
</script>
